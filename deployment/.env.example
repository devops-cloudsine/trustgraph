# =============================================================================
# TrustGraph Docker Compose Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# VLLM / LLM Configuration
# -----------------------------------------------------------------------------
VLLM_MODEL=google/gemma-3-4b-it
VLLM_MAX_MODEL_LEN=16384
VLLM_GPU_MEMORY_UTILIZATION=0.85
VLLM_DTYPE=auto
VLLM_PORT=8005

# -----------------------------------------------------------------------------
# Hugging Face Configuration
# -----------------------------------------------------------------------------
HUGGING_FACE_HUB_TOKEN=your-huggingface-token-here

# -----------------------------------------------------------------------------
# File Paths
# -----------------------------------------------------------------------------
FILES_TO_PARSE_HOST_PATH=/home/ubuntu/trustgraph/files_to_parse
TRUSTGRAPH_DEV_PATH=/home/ubuntu/trustgraph

# -----------------------------------------------------------------------------
# TrustGraph Version
# -----------------------------------------------------------------------------
TRUSTGRAPH_VERSION=1.6.5

# -----------------------------------------------------------------------------
# MinIO Configuration
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_OCR_BUCKET=ocr-images

# -----------------------------------------------------------------------------
# API Secrets
# -----------------------------------------------------------------------------
GATEWAY_SECRET=your-gateway-secret-here
MCP_SERVER_SECRET=your-mcp-server-secret-here
OPENAI_BASE_URL=http://vllm-vision:8000/v1
OPENAI_TOKEN=dummy-token

# -----------------------------------------------------------------------------
# Port Configuration (to avoid conflicts with existing services)
# -----------------------------------------------------------------------------
MCP_SERVER_PORT=8006
GRAFANA_PORT=3001
MINIO_PORT=9010
MINIO_CONSOLE_PORT=9011
